{
	"name": "signroom - webapp",
	"author": {
		"name": "Puria Nafisi Azizi",
		"email": "puria@dyne.org"
	},
	"description": "Advanced electronic signature service based on Zenroom",
	"version": "0.0.1",
	"private": true,
	"engines": {
		"node": ">=17",
		"pnpm": ">=8"
	},
	"scripts": {
		"predev": "pnpm run definitions",
		"dev": "vite dev",
		"prebuild": "pnpm run definitions",
		"build": "svelte-kit sync && vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test:ui": "playwright test --ui",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"types": "npx -y pocketbase-typegen --db ../admin/pb_data/data.db --out src/lib/pocketbase-types.ts",
		"features": "node ./src/lib/features/generateFeaturesList.mjs",
		"schema": "node scripts/generate_schema.mjs",
		"definitions": "pnpm types && pnpm schema && pnpm features",
		"serve": "pnpm build && pnpm preview --host"
	},
	"devDependencies": {
		"@playwright/test": "^1.37.1",
		"@sveltejs/adapter-auto": "^2.0.1",
		"@sveltejs/adapter-node": "^1.2.4",
		"@sveltejs/kit": "^1.16.3",
		"@types/debug": "^4.1.8",
		"@typescript-eslint/eslint-plugin": "^6.5.0",
		"@typescript-eslint/parser": "^6.5.0",
		"autoprefixer": "^10.4.15",
		"debug": "^4.3.4",
		"dotenv": "^16.3.1",
		"eslint": "^8.48.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.29",
		"postcss-load-config": "^4.0.1",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^3.0.3",
		"svelecte": "^3.16.4",
		"svelte": "^3.59.1",
		"svelte-check": "^3.3.2",
		"svelte-heros-v2": "^0.10.11",
		"svelte-preprocess": "^5.0.4",
		"sveltekit-superforms": "1.0.0-rc.4",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.6.2",
		"typescript": "^5.0.4",
		"vite": "^4.4.9",
		"vitest": "^0.34.3",
		"zod": "^3.22.2"
	},
	"type": "module",
	"dependencies": {
		"@fontsource-variable/inter": "^5.0.8",
		"@popperjs/core": "^2.11.8",
		"@sentry/sveltekit": "^7.66.0",
		"@tailwindcss/line-clamp": "^0.4.4",
		"classnames": "^2.3.2",
		"clsx": "^2.0.0",
		"dayjs": "^1.11.9",
		"execa": "^8.0.1",
		"flowbite": "^1.8.1",
		"flowbite-svelte": "^0.44.4",
		"flowbite-svelte-blocks": "^0.3.6",
		"node-forge": "^1.3.1",
		"pocketbase": "^0.14.4",
		"svelte-boring-avatars": "^1.2.4",
		"svelte-heros": "^3.3.1",
		"xml-formatter": "^3.5.0",
		"zenroom": "^3.18.1"
	}
}
