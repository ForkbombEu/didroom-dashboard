{
	"name": "signroom - webapp",
	"author": {
		"name": "Puria Nafisi Azizi",
		"email": "puria@dyne.org"
	},
	"description": "Advanced electronic signature service based on Zenroom",
	"version": "0.0.1",
	"private": true,
	"engines": {
		"node": ">=17",
		"pnpm": ">=8"
	},
	"scripts": {
		"predev": "pnpm run definitions",
		"dev": "vite dev",
		"prebuild": "pnpm run definitions",
		"build": "svelte-kit sync && vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test:ui": "playwright test --ui",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"types": "npx -y pocketbase-typegen --db ../admin/pb_data/data.db --out src/lib/pocketbase/types.ts",
		"features": "node ./src/lib/features/generateFeaturesList.mjs",
		"roles": "node ./src/lib/rbac/generateRolesList.mjs",
		"schema": "node ./src/lib/pocketbase/schema/generateSchema.mjs",
		"definitions": "pnpm types && pnpm schema && pnpm features && pnpm roles",
		"serve": "pnpm build && pnpm preview --host"
	},
	"devDependencies": {
		"@playwright/test": "^1.37.1",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/adapter-node": "^1.3.1",
		"@sveltejs/kit": "^1.24.1",
		"@types/debug": "^4.1.8",
		"@types/lodash": "^4.14.202",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"autoprefixer": "^10.4.15",
		"debug": "^4.3.4",
		"dotenv": "^16.3.1",
		"eslint": "^8.49.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.33.1",
		"postcss": "^8.4.29",
		"postcss-load-config": "^4.0.1",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^3.0.3",
		"svelecte": "^3.17.2",
		"svelte": "^4.2.0",
		"svelte-check": "^3.5.1",
		"svelte-heros-v2": "^0.10.11",
		"svelte-preprocess": "^5.0.4",
		"sveltekit-superforms": "1.6.1",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vite": "^4.4.9",
		"vitest": "^0.34.3",
		"zod": "^3.22.2"
	},
	"type": "module",
	"dependencies": {
		"@fontsource-variable/inter": "^5.0.8",
		"@peculiar/x509": "^1.9.7",
		"@popperjs/core": "^2.11.8",
		"@sentry/sveltekit": "^7.66.0",
		"@slangroom/core": "^1.13.0",
		"@slangroom/qrcode": "^1.13.0",
		"@tailwindcss/line-clamp": "^0.4.4",
		"@types/adm-zip": "^0.5.5",
		"adm-zip": "^0.5.10",
		"asn1js": "^3.0.5",
		"classnames": "^2.3.2",
		"clsx": "^2.0.0",
		"dayjs": "^1.11.9",
		"execa": "^8.0.1",
		"flowbite": "^1.8.1",
		"flowbite-svelte": "^0.44.18",
		"flowbite-svelte-blocks": "^0.5.1",
		"json-schema-builder-svelte": "github:dyne/json-schema-builder-svelte",
		"lodash": "^4.17.21",
		"nanoid": "^5.0.2",
		"node-forge": "^1.3.1",
		"pocketbase": "^0.18.0",
		"svelte-boring-avatars": "^1.2.4",
		"svelte-heros": "^5.1.0",
		"xml-formatter": "^3.5.0",
		"zenroom": "^4.12.0"
	}
}
